@model belmontazh.Models.dveriIncrementModel
@{
    ViewBag.Title = "Надбавка на стоимость дверей";
}
<hr />
@Html.Partial("dveriMenu")
<hr />
<h2>@ViewBag.Title</h2>
<hr />
@Html.ValidationSummary(false)
@using (Html.BeginForm("Increment", "Dveri", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m=>m.id)
        <div class="form-group">
            @Html.LabelFor(m => m.costDveri, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(m => m.costDveri, new { htmlAttributes = new { @class = "form-control", @value = Model.costDveri } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.costKomplekt, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(m => m.costKomplekt, new { htmlAttributes = new { @class = "form-control", @value = Model.costKomplekt } })
            </div>
        </div>
        @if (ViewBag.Status != null)
        {
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <strong style="color:green;">@ViewBag.Status</strong>
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" class="btn btn-success" value="Создать" />
                @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

}