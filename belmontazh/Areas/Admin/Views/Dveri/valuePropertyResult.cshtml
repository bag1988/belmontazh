@using belmontazh.Models;
@model IEnumerable<valuePropertyModel>
        <div class="form-group">
            <h3>Характеристики</h3>
            <div class="col-md-12">
                @if (Model != null)
                {
                       for(int id=0;id<Model.Count();id++) 
                       {
                        <div class="form-group">
                            @Html.Label(Model.ElementAt(id).propertyDveriModel.name, htmlAttributes: new { @class = "control-label col-md-3", @for= "valueProperty[" + id + "].valueProp" })              
                            @Html.Hidden("valueProperty["+id+"].propertyDveriModelid", Model.ElementAt(id).propertyDveriModelid)
                           
                            <div class="col-md-9">
                                @Html.TextBox("valueProperty[" + id + "].valueProp", Model.ElementAt(id).valueProp,  new { @class = "form-control" })
                            </div>
                        </div>
                       }
                }
                else
                {
                    <b>нет данных для отображения</b>
                }

            </div>          
        </div>
