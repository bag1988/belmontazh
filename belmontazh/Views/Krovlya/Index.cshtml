@using belmontazh.Models;
@model IEnumerable<krovliaKategoriesModel>
@{
    ViewBag.Title = "Прайс на кровельные работы";
    ViewBag.Description = "Все кровельные работы выполняются качественно, с гарантией и в оговоренные сроки. Нашими лучшими рекомендациями служат положительные отзывы клиентов и партнеров. Мы стремимся сохранить свою высокую репутацию и поэтому можно с уверенностью сказать, что забота о клиенте - главная задача для нас. Кровельные работы в Борисове, Жодино, Крупки, Смолевичи. Расчет стоимость кровельных работ.";
    ViewBag.Keywords = "кровля, прайс, кровля Борисов,кровля Жодино,кровля Крупки,кровля Смолевичи, расчет кровли";
}

    <div class="container">
        <h1 style="text-align:center;">@ViewBag.Title</h1>
        <br />
        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table text-center table-hover">
                    <tbody>
                        @foreach (var mod in Model)
                        {
                            if (mod.krovliaModel.Count > 0)
                            {
                                <tr>
                                    <td colspan=5>
                                        <h2 class="text-center">@mod.name</h2>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>@Html.DisplayNameFor(model => model.name)</b></td>
                                    <td><b>Ед. изм.</b></td>
                                    <td colspan=3><b>Цена BYN</b></td>
                                </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            @foreach (krovliaTypeModel k in ViewBag.Property)
                                            {
                                                <td>@k.name</td>
                                            }
                                        </tr>


                                        foreach (var m in mod.krovliaModel)
                                        {
                                            <tr>
                                                <td style="text-align:left;">
                                                    @Html.DisplayFor(model => m.name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => m.unitsModel.name)
                                                </td>
                                                @foreach (krovliaTypeValueModel t in m.krovliaTypeValueModel)
                                                {
                                                    <td>@t.cost</td>
                                                }
                                            </tr>
                                        }


                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
