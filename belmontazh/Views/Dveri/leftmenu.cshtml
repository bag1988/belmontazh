@using belmontazh.Models;
@model leftMenuDveri


<div style="width:100%;">
    

    <div class="leftMenu">
        <div class="heading-left-menu">
            <a data-toggle="collapse" href="#materialList">Межкомнатные двери</a>
        </div>
        <div id="materialList" class="panel-collapse collapse">
            <ul class="list-group">
                @if (Model.material != null)
                {
                    foreach (materialDveriModel p in Model.material)
                    {
                        if(p!=null)
                        { 
                        if (Request.Url.AbsoluteUri.Contains(p.nameEn))
                        {
                            <li>
                                <a style="background-color:#e7e7e7;" href="@Url.Action("mejkomnatnie", new { material = p.nameEn })">@p.name</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("mejkomnatnie", new { material = p.nameEn })">@p.name</a>
                            </li>
                            }
                        }
                    }
                    <li>
                        <a style="color:red;" href="/dveri/mejkomnatnie">Все двери</a>
                    </li>
                }
            </ul>
        </div>
    </div>



    <div class="leftMenu">
        <div class="heading-left-menu">
            <a data-toggle="collapse" href="#proizList">Входные двери</a>
        </div>
        <div id="proizList" class="panel-collapse collapse">
            <ul class="list-group">
                @if (Model.proiz != null)
                {
                    foreach (ProizvoditelModel p in Model.proiz)
                    {
                        if (p != null)
                        {
                            if (Request.Url.AbsoluteUri.Contains(p.nameEn))
                            {
                                <li>
                                    <a style="background-color:#e7e7e7;" href="@Url.Action("vhodnye", new { proiz = p.nameEn })">@p.name</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("vhodnye", new { proiz = p.nameEn })">@p.name</a>
                                </li>
                            }
                        }
                    }
                    <li>
                        <a style="color:red;" href="/dveri/vhodnye/">Все двери</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>