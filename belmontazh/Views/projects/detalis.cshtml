@using belmontazh.Models;
@model List<projectImg>
@{
    ViewBag.Title = ViewBag.NameProject;    
}

<div class="container">
    <h2 style="text-align:center;">@ViewBag.Title</h2>

    <hr class="hr_orange" />
    <div class="row">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="row text-center">
                @foreach (var m in Model)
                {
                    <div class="projectsImg">
                         <img onclick="openFoto(this)" alt="@ViewBag.NameProject" title="@ViewBag.NameProject" data-image="@m.urlImage" src="@m.smalUrlImage" />                        
                    </div>
                }
            </div>
        }
        else
        {
            @:Нет данных для отображения
        }

    </div>

</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">

            </div>
        </div>
        <div class="left carousel-control" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </div>
        <div class="right carousel-control" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </div>

    </div>
</div>