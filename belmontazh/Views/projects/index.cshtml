@using belmontazh.Models;
@model IEnumerable<projectModel>
@{
    ViewBag.Title = "Наши работы";
    ViewBag.Description = "Выполненные работы, галерея работ";
    ViewBag.Keywords = "окна, окна ПВХ, работы";
}

<div class="container">
    <h2 style="text-align:center;">@ViewBag.Title</h2>

    <hr class="hr_orange" />
    <div class="row">
        <div class="row">
            <div class="col-md-7">
                <form action="/projects?name=" method="get" class="form-horizontal">
                    <div class="input-group">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Поиск">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                @if (Request.Params["name"] != null)
                {
                    <div class="row text-info">
                        <p>
                            Результат поиска по фразе: <b>@Request.Params["name"]</b>
                        </p>
                    </div>
                }
            </div>
            <div class="col-md-5 text-right">
                <div class="btn-group">
                    @Html.PageLinks((PageInfo)ViewBag.PageInfo, Url.Action("index"))
                </div>
            </div>
        </div>
        @if (Model != null && Model.Count() > 0)
        {

            <div class="row text-center">
                @foreach (var m in Model)
                {
                    <div class="projectsImg">
                        <a href="/projects/detalis/@m.id">
                            <h4>@m.name</h4>
                            <img alt="@m.name" title="@m.name" src="@m.urlImage" />
                        </a>                     
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <div class="btn-group">
                        @Html.PageLinks((PageInfo)ViewBag.PageInfo, Url.Action("index"))
                    </div>
                </div>
            </div>
        }
        else
        {
            @:Нет данных для отображения
                }

    </div>

</div>
